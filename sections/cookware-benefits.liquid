      </div>
      <div class="review-badge"><span>{{ section.settings.review_badge_text }}</span></div>
    </div>     
  </div>
  {% if section.settings.button_link_2 != blank %}
    <a href="{{ section.settings.button_link_2 }}" class="button cta_button large-up-hide medium-hide">{{ section.settings.button_text_2 }}</a>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Cookware Benefits",
    "settings": [
       {
          "type": "text",
          "id": "subtitle_text",
          "label": "Subtitle",
          "default": "Trusted in over 60,000 kitchens"
        },
       {
        "type": "html",
        "id": "main_heading_text",
        "label": "Main Heading",
        "default": "One Pan, <br> Lots of Benefits."
      },
       {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
       {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Now"
      },
       {
        "type": "text",
        "id": "review_badge_text",
        "label": "Review Badge Text",
        "default": "7,000+ 5-Star Reviews"
      },
       {
        "type": "text",
        "id": "button_text_2",
        "label": "Button Text",
        "default": "Shop Now"
      },
       {
        "type": "url",
        "id": "button_link_2",
        "label": "Button Link 2"
      }
    ],
    "blocks": [
      {
        "type": "CookwareBenefits",
        "name": "Cookware Benefits",
        "settings": [
          {
            "type": "image_picker",
            "id": "benefits_image",
            "label": "benefits_image"
          },
          {
            "type": "html",
            "id": "icon_1_svg",
            "label": "svg"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "details",
            "label": "Details"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Cookware Benefits",
      }
    ]
  }
{% endschema %}