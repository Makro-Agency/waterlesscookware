<link rel="stylesheet" href="{{ 'cookware-benefits.css' | asset_url }}" media="print" onload="this.media='all'" />
<noscript>{{ 'cookware-benefits.css' | asset_url | stylesheet_tag }}</noscript>

<div class="cookware-benefits page-width section-padding">
  <div class="title-wrapper">
    {% if section.settings.subtitle_text != blank %}
    <span class="subtitle">{{ section.settings.subtitle_text }}</span>
    {% endif %}
    {% if section.settings.main_heading_text != blank %}
    <h2 class="main_heading h2">{{ section.settings.main_heading_text  }}</h2>
   {% endif %}
    {% if section.settings.button_text != blank %}
    <a href="{{ section.settings.button_link }}" class="button cta_button small-hide">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
  <div class="cookware-benifits-column">
    <div class="benefits-item-wrapper">
      {%- liquid                  
        assign sizes = '(min-width: 1200px) 500px, (min-width: 990px) 20.9090vw, (min-width: 750px) 50vw, calc(67vw - 4rem)'
        assign widths = '320, 375, 420, 550, 750'
      -%}
     {%- for block in section.blocks -%}
      <div class="benefits-item">
      <div class="image">
        {% if block.settings.benefits_image != blank %}
          {%- liquid
            assign dek_img = block.settings.benefits_image
            assign height = dek_img.width | divided_by: dek_img.aspect_ratio | round
          -%}
          {{
            dek_img
            | image_url: width: 750
            | image_tag: loading: 'lazy', width: dek_img.width, height: height, sizes: sizes, widths: widths
          }}
          {% assign assign dek_img = blank %}{% comment %}
          <img src="{{ block.settings.benefits_image | img_url: '500x' }}" alt="Benefit Image" height="auto" width="auto">{% endcomment %}
        {% endif %}
      </div>
      <div class="benefits-content">
        <div class="content-wrapper">
           {% if block.settings.icon_1_svg != blank %}
             <span class="icon">{{ block.settings.icon_1_svg }}</span>
           {% endif %}
          
          {% if block.settings.title != blank %}
          <div class="heading-wrapper">
            <h2 class="heading h2">{{ block.settings.title }}</h2>
            <p class="desc">{{ block.settings.details }}</p>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
     {% endfor %}
    </div>
