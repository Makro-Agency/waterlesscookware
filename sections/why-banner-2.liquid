<style>
  #full-blend-hero-section-why2 {
      background-image: url('{{ section.settings.desktop_image   | image_url: width: 1920 }}');
      background-size: cover;
      background-position: center center;
      position: relative;
      z-index: 1;
      height: max(94vh);
  }

  #full-blend-hero-section-why2 .full-blend-hero-sectiong-bg-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #000;
      opacity: 0.2;
      z-index: 2;
  }
  #full-blend-hero-section-why2 .full-blend-hero-section-container {
      z-index: 3;
      max-width: 1360px;
      padding-left: 40px;
      padding-right: 40px;
      width: 100%;
      height: 100%;
      position: relative;
      margin: auto;
  }
  #full-blend-hero-section-why2 .full-blend-hero-section-container-mobile-image {
      display: none;
  }
  #full-blend-hero-section-why2 .full-blend-hero-section-container-mobile-image img {
      width: 100%;
  }
  #full-blend-hero-section-why2 .full-blend-hero-section-container-relative {
      position: relative;
      height: 100%;
  }

  #full-blend-hero-section-why2 .full-blend-hero-section-container-box {
      padding: 40px;
      background-color: #FCFBF7;
      display: flex;
      flex-direction: column;
      row-gap: 30px;
      width: 696px;
      border-radius: 15px;
      position: absolute;
      bottom: 40px;
      left: 0px;
      z-index: 5;
  }

  #full-blend-hero-section-why2 .full-blend-hero-section-container-box-content-container {
      display: flex;
      flex-direction: column;
      row-gap: 10px;

  }

  #full-blend-hero-section-why2 .full-blend-hero-section-container-box-heading-container h1 {
      font-family: Cellofy;
      font-size: 40px;
      font-weight: 600;
     
      letter-spacing: -0.02em;
      color: #0D0D0D;
      margin: 0;
  }

  #full-blend-hero-section-why2 .full-blend-hero-section-container-box-text-container p {
      font-family: Proxima Nova;
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      color: #0D0D0D;
      margin: 0;
      padding: 0;
      margin: 0px;
  }
#full-blend-hero-section-why2 .full-blend-hero-section-container-box-btn svg{ margin-left:5px; }
  #full-blend-hero-section-why2 .full-blend-hero-section-container-box-btn {
      text-decoration: none;
      font-family: Proxima Nova;
      font-size: 16px;
      line-height: 16px;
      text-align: center;
      display: inline-block;
      padding: 15px 25px;
      border-radius: 100px;
      background-color: #606D22;
      color: #FCFBF7;
      /* width: 132px; */
       max-width:349px;
      min-height:50px;
      display:flex;
      align-items:center;
    gap:0;
  }


  #full-blend-hero-section-why2 .catalog-banner-icon-text {
      font-family: Proxima Nova;
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      text-align: left;
      color: #0d0d0d;
  }

  #full-blend-hero-section-why2 .catalog-icon-with-text {
      display: flex;
      gap: 24px;
      align-items: center;
      flex-wrap: wrap;
      padding-top:14px;
  }

  #full-blend-hero-section-why2 .banner-icon-text {
      display: flex;
      align-items: center;
      gap: 12px;
  }

  @media only screen and (max-width : 1440px) {
      #full-blend-hero-section-why2 .full-blend-hero-section-container {
          max-width: 100%;
      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container-box-heading-container h1 {
          font-size: 40px;
          line-height: 40px;
      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container-box {
          width: 660px;
      }
  }
      @media only screen and (max-width : 480px) {
.full-blend-hero-section-container-box-text-container{ max-width:350px;} }
  @media only screen and (min-width : 1540px) {
  #full-blend-hero-section-why2 .full-blend-hero-section-container-box-heading-container h1{ font-size:60px; } }
  @media only screen and (max-width : 767px) {
 
.full-blend-hero-section-container-box-btn-container-container{ display:none; }
      #full-blend-hero-section-why2 .full-blend-hero-section-container-box-heading-container h1 {
          font-size: 48px;
          line-height: 48px;
          letter-spacing: -0.02em;

      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container-box {
          position: relative;
          padding: 40px 20px;
          width: 100%;
          bottom: auto;
      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container-box-btn {
          display: block;
          width: 100%;
      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container {
          padding-left: 0px;
          padding-right: 0px;
      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container-mobile-image {
          display: block;
      }

      #full-blend-hero-section-why2 .full-blend-hero-sectiong-bg-overlay {
          background: transparent;
      }

      #full-blend-hero-section-why2 {
          background-image: none;
          height: auto;
      }

      #full-blend-hero-section-why2 .full-blend-hero-section-container-mobile-image img {
          width: 100%;
          object-fit: cover;
          object-position: center center;
      }
    #full-blend-hero-section-why2 .catalog-icon-with-text{
              flex-direction: column;
        gap: 16px;
        padding: 0;
        /* justify-content: flex-start; */
        align-items: flex-start;
    }
    #full-blend-hero-section-why2 .full-blend-hero-section-container-box-content-container{
      row-gap:16px;
    }

  }
</style>
<div id="full-blend-hero-section-why2">
  <div class="full-blend-hero-sectiong-bg-overlay"></div>
  <div class="full-blend-hero-section-container">
    <div class="full-blend-hero-section-container-relative">
      <div class="full-blend-hero-section-container-mobile-image">
        <img src="{{ section.settings.mobile_image | img_url: 'master' }}" alt="{{ section.settings.mobile_image.alt }}">
      </div>
      <div class="full-blend-hero-section-container-box">
        <div class="full-blend-hero-section-container-box-content-container">
          <div class="full-blend-hero-section-container-box-heading-container">
            <h1>{{ section.settings.heading }}</h1>
          </div>
          <div class="full-blend-hero-section-container-box-text-container">
            <p>{{ section.settings.description }}</p>
          </div>
          <div class="catalog-icon-with-text">
            {% for block in section.blocks %}
              {% if block.type == 'icon_text' %}
                <div class="banner-icon-text">
                  {{ block.settings.icon }}
                  <span class="catalog-banner-icon-text">{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="full-blend-hero-section-container-box-btn-container-container">
          <a href="{{ section.settings.button_link }}" class="button cta_button full-blend-hero-section-container-box-btn">{{ section.settings.button_text }} <svg xmlns="http://www.w3.org/2000/svg" width="24" height="16" viewBox="0 0 24 16" fill="none">
            <path d="M23.5979 0.318222C23.5971 0.318222 23.5963 0.318222 23.5955 0.318222H0.404494C0.18112 0.318222 0 0.499342 0 0.722717V15.2773C0 15.5007 0.18112 15.6818 0.404494 15.6818H23.5955C23.8189 15.6818 24 15.5007 24 15.2773V0.725124C24.0013 0.501749 23.8213 0.319546 23.5979 0.318222ZM0.808989 1.12962H11.5955V7.59671H0.808989V1.12962ZM23.2006 14.8728H0.808989V13.2693H23.2006V14.8728ZM23.2006 12.4651H0.808989V10.8375H23.2006V12.4651ZM23.2006 10.0333H0.808989V8.4057H23.2006V10.0333ZM12.4045 7.60153V5.97392H23.1886L23.2006 7.60153H12.4045ZM12.4045 5.16975V3.54455H23.1886L23.2006 5.16975H12.4045ZM12.4045 2.73797V1.12962H23.1886L23.2006 2.73797H12.4045Z" fill="white"/>
          </svg></a>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Why Banner",
  "settings": [
        {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Horem ipsum dolor amet, consectetur"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Horem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis. Class aptent taciti sociosqu ad litora torquent"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Our American Craftsmanship"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "icon_text",
      "name": "Icon with Text",
      "limit": 3,
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Banner 2",
      "blocks": [
        {
          "type": "icon_text"
        },
        {
          "type": "icon_text"
        },
        {
          "type": "icon_text"
        }
      ]
    }
  ]
}
{% endschema %}