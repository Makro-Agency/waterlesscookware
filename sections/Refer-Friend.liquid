        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <script>
            $(document).ready(function () {
                $('.main--tabs').on('click', function () {
                    // Remove active class from all buttons
                    $('.main--tabs').removeClass('active');

                    // Add active class to the clicked button
                    $(this).addClass('active');

                    // Hide all tab contents
                    $('.tabcontent').hide();

                    // Show the corresponding tab content
                    var referral = $(this).data('referal');
                    $('#' + referral).show();
                });

                $('.goto-next-session').on('click', function (e) {
                    e.preventDefault();
                    $('.first-default-show').hide();
                    $('.refer-friend-email-default-none').show();
                });

                $('.refer-a-friend').on('click', function (e) {
                    e.preventDefault();
                    $('.refer-friend-email-default-none').hide();
                    $('.tabsection-referals').show();
                    $('#referAFriend').show();
                });
            });
        </script>
