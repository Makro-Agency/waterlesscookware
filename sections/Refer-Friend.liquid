<style>
    .rotate-text .haricane-font-referfriend {
        position: relative;
        top: 30px;
        display: inline-block;
        transform: rotate(-370deg);
        font-family: Hurricane-Regular;
        color: #6B7A29;
        font-size:30px;
    }

    .inner-email {
        font-family: Cellofy-Regular;
    }

    .refer-a-friend-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        max-width: 80%;
        margin: 0 auto;
    }

    .refer-a-friend-container .giveandget {
        font-family: Cellofy-Regular;
        font-size: 60px;
    }

    .refer-a-friend-container .thanks-for-refering {
        font-family: Cellofy-Regular;
        font-size: 60px;
    }

    .refer-a-friend-container .offer-section {
        max-width: 50%;      
    }

    .refer-a-friend-container h1 {
        font-size: 2rem;
    }

    .refer-a-friend-container h2 {
        font-size: 1.5rem;
    }

    .refer-a-friend-container p {
        font-family: ProximaNova-Regular;
        font-size: 16px;
        color: #0D0D0D;
    }

    .refer-a-friend-container form {
        margin-top: 20px;
    }

    .refer-a-friend-container input[type="email"] {
        width: 94%;
        padding: 10px;
        margin-bottom: 30px;
        border: 1px solid #0D0D0D;
        border-radius: 20px;
    }

    .refer-a-friend-container button {
        padding: 10px 40px;
        background-color: #606D22;
        color: #fff;
        border: none;
        border-radius: 20px;
        cursor: pointer;
    }
      .refer-a-friend-container .more-friends-refer {
        padding: 10px 40px;
        background-color: #606D22;
        color: #fff;
        border: none;
        border-radius: 20px;
        cursor: pointer;
    }


    .refer-a-friend-container .social-icons {
        margin-top: 30px;
    }

    .refer-a-friend-container .social-icons a {
        margin-right: 10px;
    }

    .refer-a-friend-container.social-icons img {
        width: 20px;
        height: 20px;
    }

    .refer-a-friend-container .image--right {
          line-height: 0;
        max-width: 50%;
    }

    .refer-a-friend-container .image--right img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .refer-a-friend-container .gmail-default-none {
        display: none;
    }

    .refer-a-friend-container .email-pending {
        border-top: 2px solid #e3e2de;
        padding: 16px 0px;
        display: flex;
        justify-content: space-between;
    }

    .refer-a-friend-container .email-pending:last-child {
        border-bottom: 1px solid #e3e2de;
    }

    .refer-a-friend-container .email-pending:nth-child(1) {
        margin-top: 40px;
    }

    .refer-a-friend-container .email-pending .pending-status {
        font-family: ProximaNova-Regular;
        background-color: #E6A817;
        color: #fff;
        padding: 2px 24px;
        border-radius: 20px;
    }

    h2.thanks-for-refering {
        margin-bottom: 0px;
    }

    span.tabs-shift {
        background: #f7f6f2;
        border-radius: 20px;
        padding: 9px 0px;
    }

    button.tablink.main--tabs {
        background: none;
        color: #000;
    }

    button.tablink.main--tabs.active {
        background-color: #606D22;
        color: #fff;
    }

    .refer-friend-email-default-none, .tabsection-referals {
        display: none;
    }

    @media only screen and (max-width: 767px) {
        .refer-a-friend-container {
            display: block;
            max-width: 100%;
        }
        .refer-a-friend-container .offer-section {
            max-width: 100%;
            padding: 20px;
        }
        .refer-a-friend-container .image--right img {
            border-radius: 0px;
        }
        .refer-a-friend-container .image--right {
            max-width: 100%;
        }
        .refer-a-friend-container .giveandget {
        font-size: 48px;
      }
    }
</style>
