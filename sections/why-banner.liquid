<style>
  #full-blend-hero-section-why {
      background-image: url('{{ section.settings.desktop_image   | image_url: width: 1920 }}');
      background-size: cover;
      /* background-position: center center; */
      position: relative;
      z-index: 1;
      height: 80rem;
  }

  #full-blend-hero-section-why .full-blend-hero-sectiong-bg-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #000;
      opacity: 0.2;
      z-index: 2;
  }
  #full-blend-hero-section-why .full-blend-hero-section-container {
      z-index: 3;
      max-width: 1360px;
      padding-left: 40px;
      padding-right: 40px;
      width: 100%;
      height: 100%;
      position: relative;
      margin: auto;
  }
  #full-blend-hero-section-why .full-blend-hero-section-container-mobile-image {
      display: none;
  }
  #full-blend-hero-section-why .full-blend-hero-section-container-mobile-image img {
      width: 100%;
  }
  #full-blend-hero-section-why .full-blend-hero-section-container-relative {
      position: relative;
      height: 100%;
  }

  #full-blend-hero-section-why .full-blend-hero-section-container-box {
      padding: 40px;
      background-color: #FCFBF7;
      display: flex;
      flex-direction: column;
      row-gap: 30px;
      width: 696px;
      border-radius: 15px;
      position: absolute;
      bottom: 40px;
      left: 0px;
      z-index: 5;
  }

  #full-blend-hero-section-why .full-blend-hero-section-container-box-content-container {
      display: flex;
      flex-direction: column;
      row-gap: 10px;

  }

  #full-blend-hero-section-why .full-blend-hero-section-container-box-heading-container h1 {
      font-family: Cellofy;
      font-size: 60px;
      font-weight: 600;
      line-height: 60px;
      letter-spacing: -0.02em;
      color: #0D0D0D;
      margin: 0;
  }

  #full-blend-hero-section-why .full-blend-hero-section-container-box-text-container p {
      font-family: Proxima Nova;
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      color: #0D0D0D;
      margin: 0;
      padding: 0;
      margin: 0px;
  }

  #full-blend-hero-section-why .full-blend-hero-section-container-box-btn {
      text-decoration: none;
      font-family: Proxima Nova;
      font-size: 16px;
      line-height: 16px;
      text-align: center;
      display: inline-block;
      padding: 17px 27px;
      border-radius: 100px;
      background-color: #606D22;
      color: #FCFBF7;
      /* width: 132px;
      min-height:50px;
      display:flex;
      align-items:center; */
  }


  #full-blend-hero-section-why .catalog-banner-icon-text {
      font-family: Proxima Nova;
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
      text-align: left;
      color: #0d0d0d;
  }

  #full-blend-hero-section-why .catalog-icon-with-text {
      display: flex;
      gap: 24px;
      align-items: center;
      flex-wrap: wrap;
      padding-top:14px;
  }

  #full-blend-hero-section-why .banner-icon-text {
      display: flex;
      align-items: center;
      gap: 12px;
  }

  @media only screen and (max-width : 1440px) {
      #full-blend-hero-section-why .full-blend-hero-section-container {
          max-width: 100%;
      }

      #full-blend-hero-section-why .full-blend-hero-section-container-box-heading-container h1 {
          font-size: 40px;
          line-height: 40px;
      }

      #full-blend-hero-section-why .full-blend-hero-section-container-box {
          width: 660px;
      }
  }

  @media only screen and (max-width : 767px) {

      #full-blend-hero-section-why .full-blend-hero-section-container-box-heading-container h1 {

          font-size: 48px;
          line-height: 48px;
          letter-spacing: -0.02em;

      }

      #full-blend-hero-section-why .full-blend-hero-section-container-box {
          position: relative;
          padding: 40px 20px;
          width: 100%;
          bottom: auto;
      }

      #full-blend-hero-section-why .full-blend-hero-section-container-box-btn {
          display: block;
          width: 100%;
      }

      #full-blend-hero-section-why .full-blend-hero-section-container {
          padding-left: 0px;
          padding-right: 0px;
      }

      #full-blend-hero-section-why .full-blend-hero-section-container-mobile-image {
          display: block;
      }

      #full-blend-hero-section-why .full-blend-hero-sectiong-bg-overlay {
          background: transparent;
      }

      #full-blend-hero-section-why {
          background-image: none;
          height: auto;
      }

      #full-blend-hero-section-why .full-blend-hero-section-container-mobile-image img {
          width: 100%;
          object-fit: cover;
          object-position: center center;
      }
    #full-blend-hero-section-why .catalog-icon-with-text{
              flex-direction: column;
        gap: 16px;
        padding: 0;
        /* justify-content: flex-start; */
        align-items: flex-start;
    }
    #full-blend-hero-section-why .full-blend-hero-section-container-box-content-container{
      row-gap:16px;
    }

  }
    @media only screen and (min-width : 1200px) and (max-width:1440px) {
   #full-blend-hero-section-why .full-blend-hero-section-container-box-heading-container h1 span{ display:inline-block;}
  #full-blend-hero-section-why .full-blend-hero-section-container-box-heading-container h1{ max-width:432px;} }
</style>
<div id="full-blend-hero-section-why">
  <div class="full-blend-hero-sectiong-bg-overlay"></div>
  <div class="full-blend-hero-section-container">
    <div class="full-blend-hero-section-container-relative">
      <div class="full-blend-hero-section-container-mobile-image">
        <img src="{{ section.settings.mobile_image | img_url: 'master' }}" alt="{{ section.settings.mobile_image.alt }}">
      </div>
      <div class="full-blend-hero-section-container-box">
        <div class="full-blend-hero-section-container-box-content-container">
          <div class="full-blend-hero-section-container-box-heading-container">
            <h1>{{ section.settings.heading }}</h1>
          </div>
          <div class="full-blend-hero-section-container-box-text-container">
            <p>{{ section.settings.description }}</p>
          </div>
          <div class="catalog-icon-with-text">
            {% for block in section.blocks %}
              {% if block.type == 'icon_text' %}
                <div class="banner-icon-text">
                  {{ block.settings.icon }}
                  <span class="catalog-banner-icon-text">{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="full-blend-hero-section-container-box-btn-container-container">
          <a href="{{ section.settings.button_link }}" class="button cta_button">{{ section.settings.button_text }}</a>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Why Banner",
  "settings": [
       {
       "type": "image_picker",
       "id": "desktop_image",
       "label": " Banner Image"
     },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Horem ipsum dolor amet, consectetur"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Horem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis. Class aptent taciti sociosqu ad litora torquent"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CTA Button"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "icon_text",
      "name": "Icon with Text",
      "limit": 3,
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Banner",
      "blocks": [
        {
          "type": "icon_text"
        },
        {
          "type": "icon_text"
        },
        {
          "type": "icon_text"
        }
      ]
    }
  ]
}
{% endschema %}