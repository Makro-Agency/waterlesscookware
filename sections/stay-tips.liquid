<script>
document.addEventListener('DOMContentLoaded', function() {
    const tabLinks = document.querySelectorAll('.tab-scroll-category');
    tabLinks.forEach(link => {
      link.addEventListener('click', function(event) {
        event.preventDefault(); 
        tabLinks.forEach(link => link.classList.remove('active'));
        this.classList.add('active');
        const targetSectionId = link.getAttribute('data-target'); // Get the target section ID
        const targetSection = document.getElementById(targetSectionId); // Find the target section
        if (targetSection) {
          const sectionPosition = targetSection.getBoundingClientRect().top + window.pageYOffset - 50; // Calculate the scroll position
          window.scrollTo({
            top: sectionPosition,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.accordion').forEach(accordion => {
    const accButtons = accordion.querySelectorAll('.accordion-button');

    function toggleAccordion(event) {
      const targetContent = accordion.querySelector(event.currentTarget.getAttribute('data-target'));

      // Check if the clicked button is already active
      if (event.currentTarget.classList.contains('active')) {
        // If active, remove active classes and close content
        event.currentTarget.classList.remove('active');
        targetContent.classList.remove('active');
      } else {
        // Close all accordion sections within this accordion
        accButtons.forEach(function(btn) {
          btn.classList.remove('active');
          const content = accordion.querySelector(btn.getAttribute('data-target'));
          content.classList.remove('active');
        });

        // Open the clicked section
        event.currentTarget.classList.add('active');
        targetContent.classList.add('active');
      }
    }

    accButtons.forEach(function(btn) {
      btn.addEventListener('click', toggleAccordion);
    });

    // Open the first accordion by default
    if (accButtons.length > 0) {
      const firstButton = accButtons[0];
      const firstContent = accordion.querySelector(firstButton.getAttribute('data-target'));
      firstButton.classList.add('active');
      firstContent.classList.add('active');
    }
  });
});

</script>



