{% schema %}
{
"name": "Lifetime Warranty",
"class": "life-time-section",
"settings": [
    {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
  {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
],
    "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "details",
          "label": "Details"
        }
      ]
    }
  ],
"presets": [
{
"name":"Lifetime Warranty"
}
]
}
{% endschema %}
