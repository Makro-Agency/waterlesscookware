{{ 'health-section.css' | asset_url | stylesheet_tag }}

<div id="health-section">
  <div class="health-section">
    <div class="health-section-header-section">
      <div class="health-section-header-text">
        {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
       {% endif %}
         {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
          {% endif %}
        {% if section.settings.cta_text != blank %}
          <a href="{{ section.settings.cta_link }}" class="cta-btn_health">
            {{ section.settings.cta_text }}
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.7535 11.5L15 7.99821M15 7.99821L11.7569 4.5M15 7.99821H1" stroke="#0D0D0D" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </a>
        {% endif %}
      </div>
      <div class="health-section-header-review-box desktop-view-991">
        <div class="health-section-header-review-box-inner">
         {% if section.settings.review_text != blank %}
          <p>{{ section.settings.review_text }}</p>
          {% endif %}
          <div class="health-client-img-width-text">
          {% if section.settings.client_image != blank %}
            <div class="health-client-img">
              <img src="{{ section.settings.client_image | img_url: 'master' }}" alt="{{ section.settings.client_name }}">
            </div>
           {% endif %}
            <div class="health-client-info">
             {% if section.settings.client_name != blank %}
              <span class="health-client-info-header">{{ section.settings.client_name }}</span>
              {% endif %}
             {% if section.settings.client_title != blank %}
              <div class="health-client-info-true-icon">
                <div class="true-icon-why-health">
                  <svg width="6" height="6" viewBox="0 0 8 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1.375 3.00984L3.11734 4.80469L6.625 1.19531" stroke="#FCFBF7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>
                <span>{{ section.settings.client_title }}</span>
              </div>
               {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="why-health-table">
      <table class="three-column-table">
        <thead>
          <tr>
            <th><h4>{{ section.settings.table_header_1 }}</h4></th>
            <th><h4>{{ section.settings.table_header_2 }}</h4></th>
            <th><h4>{{ section.settings.table_header_3 }}</h4></th>
          </tr>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'table_row' %}
              <tr>
                <td>{{ block.settings.property }}</td>
                <td>
                  {% if block.settings.iconsvg1 != blank %}
                  <div class="table-true-icon">
                     <img src="{{ block.settings.iconsvg1 | img_url: '' }}" alt="{{ section.settings.client_name }}">
                  </div>
                  {% endif %}
                </td>
                <td>
                   {% if block.settings.iconsvg2 != blank %}
                  <div class="table-true-icon-close">
                    <img src="{{ block.settings.iconsvg2 | img_url: '' }}" alt="{{ section.settings.client_name }}">
                  </div>
                    {% endif %}
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="health-section-header-review-box mobile-view-991">
      <div class="health-section-header-review-box-inner">
        <p>{{ section.settings.review_text }}</p>
        <div class="health-client-img-width-text">
          {% if section.settings.client_image != blank %}
          <div class="health-client-img">
            <img src="{{ section.settings.client_image | img_url: 'master' }}" alt="{{ section.settings.client_name }}">
          </div>
          {% endif %}
          <div class="health-client-info">
           {% if section.settings.client_name != blank %}
            <span class="health-client-info-header">{{ section.settings.client_name }}</span>
           {% endif %}
            {% if section.settings.client_title != blank %}
              <div class="health-client-info-true-icon">
                  <div class="true-icon-why-health">
                    <svg width="6" height="6" viewBox="0 0 8 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M1.375 3.00984L3.11734 4.80469L6.625 1.19531" stroke="#FCFBF7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  </div>
                <span>{{ section.settings.client_title }}</span>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Health Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Health & Safety Deep Dive consectetur"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Horem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputateint libero et velit interdum, ac aliquet odio mattis."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "CTA Button"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "textarea",
      "id": "review_text",
      "label": "Review Text",
      "default": "\"Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos.\""
    },
    {
      "type": "image_picker",
      "id": "client_image",
      "label": "Client Image"
    },
    {
      "type": "text",
      "id": "client_name",
      "label": "Client Name",
      "default": "Alan B."
    },
    {
      "type": "text",
      "id": "client_title",
      "label": "Client Title",
      "default": "Professional Chef"
    },
    {
      "type": "text",
      "id": "table_header_1",
      "label": "Table Header 1",
      "default": "Property"
    },
    {
      "type": "text",
      "id": "table_header_2",
      "label": "Table Header 2",
      "default": "360 Cookware"
    },
    {
      "type": "text",
      "id": "table_header_3",
      "label": "Table Header 3",
      "default": "Traditional Cookware"
    }
  ],
  "blocks": [
    {
      "type": "table_row",
      "name": "Table Row",
      "settings": [
        {
          "type": "text",
          "id": "property",
          "label": "Property",
          "default": "Non-Toxic Property Horem ipsum dolor sit amet"
        },
        {
          "type": "image_picker",
          "id": "iconsvg1",
          "label": "Icon 1"
        },
        {
          "type": "image_picker",
          "id": "iconsvg2",
          "label": "Icon 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Health Section",
      "blocks": [
        {"type": "table_row"},
        {"type": "table_row"},
        {"type": "table_row"},
        {"type": "table_row"},
        {"type": "table_row"}
      ]
    }
  ]
}
{% endschema %}