                      {% if tag contains '_all' or tag contains '_All' %}
                        {% assign tagName = tag | replace: '_',' ' %}
                        {% assign tagCategory = 'Category' %}
                      {% else %}
                        {% assign tagName = tag | split: '_' | last | capitalize %}
                        {% assign tagCategory = tag | split: '_' | first | capitalize %}
                      {% endif %}            
                      {%- capture _rT -%}
                        {%- for _tag in current_tags -%}{%- unless tag == _tag -%}+{{ _tag | handleize }}{%- endunless -%}{%- endfor -%}
                      {%- endcapture -%}
                      {%- assign _rT = _rT | remove_first:'+' -%}                
                      <a href="{{ collection.url }}/{{ _rT }}" data-tag-rT="tag={% if _rT contains '+' %}{{ _rT | replace:'+','&tag=' }}{% else %}{{ _rT  }}{% endif %}" 
