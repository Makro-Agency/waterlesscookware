{% comment %}
  Renders facets (filtering and sorting)

  Accepts:
  - results: {Object} Collection or Search object
  - enable_filtering: {Boolean} Show filtering when true
  - enable_sorting: {Boolean} Show sorting when true
  - filter_type: {String} Type of filter
  - paginate: {Object}

  Usage:
  {% render 'facets', results: collection, enable_filtering: true, enable_sorting: true, filter_type: 'vertical', paginate: paginate %}
{% endcomment %}

{{ 'component-show-more.css' | asset_url | stylesheet_tag }}
{{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
{{ 'component-swatch.css' | asset_url | stylesheet_tag }}

{% assign has_onsale = false %}
{% if template.suffix == "ajax-onsale" %}
  {% assign has_onsale = true %}
{% endif %}

{%- liquid
  assign sort_by = results.sort_by | default: results.default_sort_by
  assign total_active_values = 0
  assign default_presentation = 'text'
  if results.url
    assign results_url = results.url
  else
    assign terms = results.terms | escape
    assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  endif
-%}

<div class="facets-container{% if filter_type == 'drawer' %} facets-container-drawer{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  {%- if filter_type == 'vertical' or filter_type == 'horizontal' -%}
    <facet-filters-form class="facets medium-hide small-hide">
      <form
        id="FacetFiltersForm"
        class="{% if filter_type == 'horizontal' %}facets__form{% else %}facets__form-vertical{% endif %}"
      >
        {%- if results.terms -%}
          <input type="hidden" name="q" value="{{ results.terms | escape }}">
          <input name="options[prefix]" type="hidden" value="last">
        {%- endif -%}

        {% if enable_filtering %}
          {% comment %} Heading is the first tabbable element on filter type horizontal {% endcomment %}
          <div
            id="FacetsWrapperDesktop"
            {% if filter_type == 'horizontal' %}
              class="facets__wrapper"
            {% endif %}
          >
            {%- if filter_type == 'horizontal' and results.filters != empty -%}
              <h2 class="facets__heading caption-large text-body" id="verticalTitle" tabindex="-1">
                {{ 'products.facets.filter_by_label' | t }}
              </h2>
            {%- endif -%}
            {% comment %} Pills are right below the title for filter type vertical {% endcomment %}
            {%- if filter_type == 'vertical' -%}
              <div class="active-facets active-facets-desktop">
                <div class="active-facets-vertical-filter category-filter">
                  {%- unless results.filters == empty -%}
                    <h5
                      class="facets__heading facets__heading--vertical caption-large text-body"
                      id="verticalTitle"
                      tabindex="-1"
                    >
                      {{ 'products.facets.filter_by_label' | t }}
                    </h5>
                  {%- endunless -%}


                  {%- for filter in results.filters -%}
                    {% case filter.type %}
                      {% when 'boolean', 'list' %}
                        {%- assign label_downcase = filter.label | downcase -%}
                        {%- if label_downcase == 'availability' or label_downcase == 'disponibilité' -%}                    
                          {%- capture availabilityCheckbox -%}
                            {%- for value in filter.values -%}
                              {%- if value.value == '1' -%}
                                <label
                                  for="RRRFilter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                  class="toggle_switch{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                >
                                  <input
                                    type="checkbox"
                                    name="{{ value.param_name }}"
                                    value="{{ value.value }}"
                                    id="RRRFilter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                    {% if value.active %}
                                      checked
                                    {% endif %}
                                    {% if value.count == 0 and value.active == false %}
                                      disabled
                                    {% endif %}
                                  >
                                  <span class="slider-toggle"></span>                                  
                                </label>
                                <span class="filter-text" for="RRRFilter-{{ filter.param_name | escape }}-{{ forloop.index }}">In Stock</span>
                                {%- capture mobileAvailabilityCheckbox -%}                          
                                <label
                                  for="RRRFilter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                  class="toggle facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                >
                                  <input
                                    type="checkbox"
                                    id="RRRFilter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                    class="mobileAvailabilityCheckbox"
                                    {% if value.active %}
                                      checked
                                    {% endif %}
                                    {% if value.count == 0 and value.active == false %}
                                      disabled
                                    {% endif %}
                                  >
                                  <span class="slider-toggle round"></span>                          
                                </label>
                                <span class="filter-text" for="RRRFilter-{{ filter.param_name | escape }}-{{ forloop.index }}">In Stock</span>
                                {%- endcapture -%}
                              {%- endif -%}
                            {%- endfor -%}
                          {%- endcapture -%}
                          {%- assign break_loop = true -%} 
                      {% endif %}
                    {% endcase %}
                    {% if break_loop %}{% break %}{% endif %}
                  {% endfor %}


              {% if availabilityCheckbox != blank %}
              <div class="category-toggle">                
                <span class="category-toggle-stock">
                  {{ availabilityCheckbox | replace:'RRR','' }}
                  {% comment %}
                  <label class="toggle_switch">
                    <input type="checkbox" id="availabilityCheckbox">
                    <span class="slider-toggle"></span>
                  </label>
                  <span>In Stock</span>
                  {% endcomment %}
                </span>
                <span class="category-toggle-sale">
                  <label class="toggle_switch on-sale-filter--input">
                    <input type="checkbox" id="saleCheckbox"{% if template.suffix == "ajax-onsale" %} checked{% endif %}>
                    <span class="slider-toggle"></span>
                  </label>
                  <span>On Sale</span>
                </span>
              </div>
              {% endif %}
{% comment %}   
<script>
document.querySelector('#availabilityCheckbox').addEventListener('change',function(e){
    document.querySelector('[name="filter.v.availability"]').click();
})  
document.addEventListener('DOMContentLoaded', function() {
    const availabilityCheckbox = document.getElementById('availabilityCheckbox');
    const saleCheckbox = document.getElementById('saleCheckbox');

    // Function to update URL with filter params
    function updateURLParams(param, value) {
        const url = new URL(window.location.href); // Get current URL
        url.searchParams.set(param, value); // Set the new param
        window.history.replaceState(null, null, url); // Update the browser URL without reloading
    }

    // Function to remove URL params
    function removeURLParams(param) {
        const url = new URL(window.location.href); // Get current URL
        url.searchParams.delete(param); // Remove the param
        window.history.replaceState(null, null, url); // Update the browser URL without reloading
    }

    // Check for localStorage state and update checkboxes and URL on page load
    if (localStorage.getItem('availabilityCheckbox') === 'checked') {
        availabilityCheckbox.checked = true;
        updateURLParams('filter.v.availability', '1');
    }

    if (localStorage.getItem('saleCheckbox') === 'checked') {
        saleCheckbox.checked = true;
        updateURLParams('filter.v.on_sale', '1');
    }

    // Event listener for availabilityCheckbox
    availabilityCheckbox.addEventListener('change', function() {
        if (this.checked) {
            localStorage.setItem('availabilityCheckbox', 'checked');
            updateURLParams('filter.v.availability', '1'); // Add availability filter
        } else {
            localStorage.setItem('availabilityCheckbox', 'unchecked');
            removeURLParams('filter.v.availability'); // Remove availability filter
        }
    });

    // Event listener for saleCheckbox
    saleCheckbox.addEventListener('change', function() {
        if (this.checked) {
            localStorage.setItem('saleCheckbox', 'checked');
            updateURLParams('filter.v.on_sale', '1'); // Add sale filter
        } else {
            localStorage.setItem('saleCheckbox', 'unchecked');
            removeURLParams('filter.v.on_sale'); // Remove sale filter
        }
    });
});
</script>    {% endcomment %}                 
            
