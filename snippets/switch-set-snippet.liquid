{% if settings.switch_set_show %}
<style>
  .main_heading {
    font-size: 40px;
    margin-bottom:20px;
  }
  .custom-seitch-sec{
    padding: 15px;
    border-radius: 15px;
    position:relative;
  }
  .switch-to-set-section {
    padding: 20px;
    border-radius: 10px;
    width: 100%;
  }
  .set-card {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
  .set-image{
    padding-right: 30px;
  }
  .set-image img {
    border-radius: 10px;
    height: 160px;
    width: 160px;
  }
  .set-details {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .set-title {
    font-size: 20px;
    font-weight: bold;
    margin:0;
  }
  .set-pricing {
    display: flex;
    align-items: center;
  }
  .sale-price {
    color: black;
    font-weight: bold;
    margin-right: 10px;
  }
  .original-price {
    text-decoration: line-through;
    color: grey;
  }
  .upgrade-to-set-button,
  .buy-set-save-button {
    background-color: transparent;
    border: 1px solid black;
    border-radius: 25px;
    padding: 6px 25px;
    margin-top: 15px;
    cursor: pointer;
    color:#000;
    display:inline-block;
  }
  .upgrade-to-set-button:hover{
    background-color: #606D22;
    color:#fff;
    border:1px solid #606D22;
  }
  .buy-set-save-button {
    background-color: #708c49;
    color: white;
    position: absolute;
    right: 0;
    top: 0;
    margin-top: 0;
    padding: 4px 12px 4px 16px;
    border-radius: 0px 15px 0px 15px;
    background: #606D22;
    border: 0;
  }
</style>
    <section class="switch-to-set-section">
      <div class="">
       <h2 class="main_heading h2">{{ settings.main_heading }}</h2>
      <div class="custom-seitch-sec" style="background-color: {{ settings.background_color }};">
      {% if settings.product != blank %}
        {% assign product = all_products[settings.product] %}
        <div class="set-card">
          <div class="set-image">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
            {% else %}
              <img src="{{ 'placeholder.jpg' | asset_url }}" alt="Placeholder Image">
            {% endif %}
          </div>
          <div class="set-details">
            <h3 class="set-title">{{ product.title }}</h3>
            <div class="set-pricing">
              {% if product.compare_at_price > product.price %}
                <span class="sale-price">{{ product.price | money }}</span>
                <span class="original-price">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="sale-price">{{ product.price | money }}</span>
              {% endif %}
            </div>
            <div>
              <a href="{{ product.url }}" class="upgrade-to-set-button">{{ settings.upgrade_button_text }}</a>
            </div>
          </div>
          <div>
            <a href="{{ product.url }}" class="buy-set-save-button">{{ settings.buy_button_text }}</a>
          </div>
        </div>
      {% endif %}
        </div>
        </div>
    </section>
{% endif %}