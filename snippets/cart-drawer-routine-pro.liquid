                  aria-haspopup="dialog"
                  aria-labelledby="{{ product_form_id }}-submit title-Cart-{{ chk_prod.id }}"
                  aria-live="polite"
                  data-sold-out-message="true"
                  {% if chk_prod.selected_or_first_available_variant.available == false %}
