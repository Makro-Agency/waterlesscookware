                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                  </div>
                  {% comment %}<span class="plus-icon">{% render 'icon-plus-white' %}</span>{% endcomment %}
                </button>
              {%- endform -%}
            </product-form>
        </div>
      </div>
      {% endif %}
    {% endunless %}
  {% endfor %}
{% endcapture %}

